<div class="mb-4 text-center d-print-none">
    <a href="/" class="header">
        <h1 class="display-1">رویداد نگار ایران <span class="fs-2 text-danger"><i class="bi bi-heart-fill"></i></span></h1>
    </a>
</div>
<div class="d-flex justify-content-center mb-5 d-print-none">
    <div>
        <a href="#offcanvasExample"
           class="px-3 nav-link"
           data-bs-toggle="offcanvas"
           aria-controls="offcanvasExample">درباره</a>
    </div>
    <a asp-page="Index" asp-area="Timeline" class="px-3 nav-link">
        چه خبر؟
        <i class="bi bi-pencil-square"></i>
    </a>
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            <a asp-page="Index" asp-area="Timeline" class="nav-link">اخبار</a>
        }
        <form method="post" 
              asp-page="/Account/Logout"
              asp-area="Identity" 
              id="logout"></form>
        <a href="javascript:void(0)"
           onclick="$('#logout').submit()"
           class="nav-link">
            خروج
        </a>
    }
    <a href="https://github.com/hrsh/irantimeflow"
       target="_blank"
       class="px-3 nav-link">گیت‌هاب <i class="bi bi-box-arrow-up-right"></i></a>
</div>