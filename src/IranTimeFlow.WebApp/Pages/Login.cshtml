@page "/account/u/login"
@model LoginPage

@{
    ViewData["Title"] = "ورود";
}

<div class="row justify-content-center">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <strong class="me-auto">رویداد نگار ایران</strong>
                    <small></small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    @Model.Message
                </div>
            </div>
        }
        <form class="card" method="post" id="login">
            <div class="card-body">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control"
                           asp-for="InputModel.Email"
                           placeholder="name@example.com">
                    <label asp-for="InputModel.Email">آدرس ایمیل</label>
                    <span class="text-danger small" asp-validation-for="InputModel.Email"></span>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control"
                           asp-for="InputModel.Password"
                           placeholder="***">
                    <label asp-for="InputModel.Password">کلمه عبور</label>
                    <span class="text-danger small" asp-validation-for="InputModel.Password"></span>
                </div>
                <div class="form-check form-switch pt-4">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">مرا به یاد داشته باش</label>
                </div>
            </div>
            <div class="card-footer bg-light py-3">
                <button type="submit"
                        class="btn btn-primary"
                        id="btnGo"
                        onclick="CustomSubmit('login', this)">
                    ورود
                </button>
                <a asp-page="Index" class="btn btn-link">انصراف</a>
            </div>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>