@model TimelineViewModel

<li class="event" data-date="@Model.DateRised">
    <h3 class="fs-4">@Model.Title</h3>
    @if (!Model.Approved)
    {
        <span class="btn btn-danger btn-sm rounded-pill px-4 mb-4">
            تردید در درستی
        </span>
    }
    <p class="fs-5">
        <div class="pb-3 event-body">@Model.Content</div>
        <h5>منابع</h5>
        @if (Model.Resources != null && Model.Resources.Any())
        {
            <ul class="my-list">
                @foreach(var r in Model.Resources)
                {
                    <li class="">
                        <a class="nav-link px-0" dir="ltr" href="@r" target="_blank">
                            @r
                            <i class="bi bi-box-arrow-up-right"></i>
                        </a>
                    </li>
                }
            </ul>
        }
    </p>
    <div class="d-flex justify-content-between pt-4">
        <div>
            <a href="#" class="nav-link px-0 text-secondary">@($"{Model.Year}.{Model.Month}")#</a>
        </div>
        <div>
            @foreach (var t in Model.Tagline)
            {
                <a class="btn btn-primary btn-sm rounded-pill px-3" href="#">
                    <i class="bi bi-tag-fill"></i>
                    @t
                </a>
            }
        </div>
    </div>
</li>